<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/dragonballz_tossil"
    android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dragonballz_logo_transparent2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"></ImageView>
    <ImageButton
        android:id="@+id/btn_record"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="right"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginTop="50dp"
        android:src="@drawable/podium"
        android:background="@drawable/button_clicked_small"
        ></ImageButton>
    <ImageButton
        android:layout_marginTop="10dp"
        android:id="@+id/btn_set"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="right"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ui"
        android:background="@drawable/button_clicked_small"
        ></ImageButton>
    <ImageButton
        android:id="@+id/btn_start"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/play_button"
        android:layout_marginTop="50dp"
        android:background="#dddddd"
        ></ImageButton>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#999999"
            android:gravity="right"
            android:text="made by Eloquence\nTEL: eloquencedevelopers@gmail.com"
            android:textSize="20dp"></TextView>
    </RelativeLayout>


</LinearLayout>